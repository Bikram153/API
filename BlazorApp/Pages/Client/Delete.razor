@page "/Client/Delete/{Id:int}"
<div class="alert alert-danger" role="alert">
    Do you want to delete Client Id: @Id?
</div>
<div class="row g-3 mb-3">
    <div class="col-1">
        <button type="button" class="btn btn-primary" @onclick="DeleteClient">Delete</button>
    </div>
    <div class="col-2">
        <a type="button" class="btn btn-danger" href="/Client">Cancel</a>
    </div>
</div>
@inject HttpClient http;
@inject NavigationManager navManager;
@code {
    [Parameter]
    public int Id{ get; set; }

    public async Task DeleteClient()
    {
        var response = await http.DeleteAsync($"https://localhost:4000/api/Clients/{Id}");
        navManager.NavigateTo("/Client");
    }
}
